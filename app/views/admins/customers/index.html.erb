<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h4><mark>会員一覧</mark></h4>
    </div>
  </div>
  <div class="row" >
    <div class="col-md-9 col-md-offset-1", style="font-size: 18px;">
      <table class="table table-bordered" style="background: rgba(0,0,0,0.2);">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to admins_customer_path(customer.id) do %>
              <%= customer.first_name %><%= customer.last_name %>
              <% end %>
            </td>
          <td>
            <%= customer.email %>
          </td>
          <td>
            <%= customer.is_deleted %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="text-center">
      <%= paginate @customers %>
    </div>
  </div>
</div>
