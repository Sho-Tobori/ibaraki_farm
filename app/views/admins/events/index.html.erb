<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h4><mark>イベント一覧</mark></h4>

    <div class="text-right">
      <%= link_to "＋", new_admins_event_path, class: "btn btn-default" %>
    </div>

    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1", style="font-size: 18px;">
      <table class="table table-bordered" style="background: rgba(0,0,0,0.2);">
        <thead>
          <tr>
            <th>イベント名</th>
            <th>開始日</th>
            <th>終了日</th>
            <th>詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
          <tr>
            <td>
              <%= link_to event.title, admins_event_path(event) %>
            </td>
            <td>
              <%= event.start %>
            </td>
            <td>
              <%= event.end %>
            </td>
            <td>
              <%= event.explanation %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="text-center">
      <%= paginate @events %>
    </div>
  </div>
</div>