<div class="row">
    <div class="col-md-11 col-md-offset-1">
        <h4><mark>イベント編集</mark></h4>
    </div>

  <%= form_for(@event, url: admins_event_path) do |f| %>
    <div class="col-md-12">
            <div class="col-md-8">
                <div class="row">
                    <div class="form-group">
                        <label class="col-md-3 control-label">イベント名</label>
                        <div class="col-md-6">
                        <%= f.text_field :title, class: "form-control"%>
                    </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label class="col-md-3 control-label">開始日</label>
                        <div class="col-md-6">
                        <%= f.datetime_field :start, class: "form-control", rows: "4" %>
                    </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label class="col-md-3 control-label">終了時期</label>
                        <div class="col-md-6">
                            <%= f.datetime_field :end, class: "form-control", rows: "4" %>
                    </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label class="col-md-3 control-label">出荷時期</label>
                        <div class="col-md-6">
                            <%= f.text_field :explanation, class: "form-control", rows: "4" %>
                        </div>
                    </div>
                </div>
        <div class="row">
            <%= f.submit "変更を保存", class: "btn btn-primary col-md-offset-9" %>
        </div>
    <% end %>
</div>