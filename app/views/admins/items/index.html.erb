<div id="main">
 <section>
    <h2>ご登録商品一覧 -----<%= link_to "商品登録", new_admins_item_path %>はこちら。-----
    </h2>
      <% @items.each do |item| %>
        <table class="list">
          <tr>
            <th></th>
            <td><%= attachment_image_tag item, :image, format: 'jpeg', size:"150x100" %></td>
          </tr>
          <tr>
            <th>商品名</th>
            <td><%= link_to item.name, admins_item_path(item) %></td>
          </tr>
          <tr>
            <th>説明文</th>
            <td><%= item.explanation %></td>
          </tr>
          <tr>
            <th>出荷時期</th>
            <td><%= item.shipping_time %></td>
          </tr>
          <tr>
            <th>在庫</th>
            <td>
              <% if item.sale_status == true %>
                <P> 販売中</P>
              <% else %>
                <P> 売り切れ </P>
              <% end %>
            </td>
          </tr>
      </table>
    <% end %>
  </section>
</div>

