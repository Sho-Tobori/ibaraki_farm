<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <%= attachment_image_tag @item, :image, :fill, 200, 200, format: 'jpeg', fallback: "no_image.png" %>
    </div>
    <div class="col-md-5">
      <div class="row">
        <h2><%= @item.name %></h2>
        <h4>【商品紹介] <br>
          <%= @item.explanation %>
        </h4>
        <h4>【出荷時期】<%= @item.shipping_time %></h4>
      </div>
    </div>
  </div>
</div>

<!-- コメント -->
  <div class="row">
    <h2>コメント</h2>
      <div class="col-md-4 col-md-offset-1">
        <%= form_for [@item, @post_comment], url: customers_item_post_comments_path(@item) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <%= f.text_area :comment, size: "30x5" %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.submit '送信', class: "btn-sm btn-primary" %>
        <% end %>
      </div>
    </div>
      <div class="col-md-4 col-md-offset-1">
        <table>
          <thead>
            <tr>
              <th>コメント投稿者</th>
              <th>コメント内容</th>
            </tr>
          </thead>
          <tbody>
            <% @post_comments.each do |post_comment| %>
              <tr>
                <td><%= post_comment.customer.last_name %></td>
                <td><%= post_comment.comment %></td>
                <td><%= link_to "削除", customers_item_post_comment_path(@item, post_comment),:style=> "color:white;", method: :delete %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    <!-- いいね -->
    <div class="row">
      <h2>いいねお願いします！</h2>
        <div class="col-md-4 col-md-offset-1">
          <% if Like.find_by(customer_id: current_customer.id, item_id: @item.id) %>
            <%= link_to("いいね!済み", customers_item_like_path(@item.id), {method: "post"}) %>
          <% else %>
            <%= link_to("いいね！", customers_item_likes_path(@item.id), {method: "post"}) %>
          <% end %>
        </div>
    </div>