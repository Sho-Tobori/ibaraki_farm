<div class="row">
    <div class="col-md-9 col-md-offset-1">
      <h1>商品一覧 <span style="font-size: 20px;">(全<%= @items.count %>件)</span></h1>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3">
            <% if item.sale_status == true %>
              <%= link_to customers_item_path(item) do %>
                <%= attachment_image_tag item, :image, format: 'jpeg', size:"200x150" %>
                <p><%= item.name %></p>
              <% end %>
            <% else item.sale_status == false %>
              <%= attachment_image_tag item, :image, format: 'jpeg', size:"200x150" %>
              <p><%= item.name %></p>
              <p style="background-color: red; color: white; width: 30%;">売り切れ</p>
          </div>
        <% end %>
        <% end %>
      </div>
    </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="text-center">
      <%= paginate @items %>
    </div>
  </div>
</div>